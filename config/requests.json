{
  "getProductTypes": {
    "schema": {
      "protocol": "http",
      "method": "GET",
      "host": "<%= iparam.backend_url %>",
      "path": "/product-types",
      "headers": {
        "Authorization": "Bearer osapiens123"
      }
    }
  },
  "postQuery": {
    "schema": {
      "protocol": "http",
      "method": "POST",
      "host": "<%= iparam.backend_url %>",
      "path": "/query",
      "headers": {
        "Authorization": "Bearer osapiens123",
        "Content-Type": "application/json"
      }
    }
  },
  "postRating": {
    "schema": {
      "protocol": "http",
      "method": "POST",
      "host": "<%= iparam.backend_url %>",
      "path": "/rate",
      "headers": {
        "Authorization": "Bearer osapiens123",
        "Content-Type": "application/json"
      }
    }
  },
  "getTicketConversations": {
    "schema": {
      "method": "GET",
      "host": "<%= iparam.freshdesk_domain %>",
      "path": "/api/v2/tickets/<%= context.ticket_id %>/conversations",
      "headers": {
        "Authorization": "<%= encode(iparam.freshdesk_api_key) %>",
        "Content-Type": "application/json"
      }
    }
  }
}