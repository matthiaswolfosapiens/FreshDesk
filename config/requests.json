{
  "getProductTypes": {
    "schema": {
      "protocol": "https",
      "method": "GET",
      "host": "backend.local",
      "path": "/product-types",
      "headers": {
        "Authorization": "Bearer <%= iparam.api_key %>"
      }
    }
  },
  "postQuery": {
    "schema": {
      "protocol": "https",
      "method": "POST",
      "host": "backend.local",
      "path": "/query",
      "headers": {
        "Authorization": "Bearer <%= iparam.api_key %>",
        "Content-Type": "application/json"
      }
    }
  },
  "postRating": {
    "schema": {
      "protocol": "https",
      "method": "POST",
      "host": "backend.local",
      "path": "/rate",
      "headers": {
        "Authorization": "Bearer <%= iparam.api_key %>",
        "Content-Type": "application/json"
      }
    }
  },
  "postDraftReply": {
    "schema": {
      "protocol": "https",
      "method": "POST",
      "host": "backend.local",
      "path": "/draft-reply",
      "headers": {
        "Authorization": "Bearer <%= iparam.api_key %>",
        "Content-Type": "application/json"
      }
    }
  },
  "postSummarize": {
    "schema": {
      "protocol": "https",
      "method": "POST",
      "host": "backend.local",
      "path": "/summarize",
      "headers": {
        "Authorization": "Bearer <%= iparam.api_key %>",
        "Content-Type": "application/json"
      }
    }
  },
  "getTicketConversations": {
    "schema": {
      "method": "GET",
      "host": "<%= iparam.freshdesk_domain %>",
      "path": "/api/v2/tickets/<%= context.ticket_id %>/conversations",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.freshdesk_api_key + ':X') %>",
        "Content-Type": "application/json"
      }
    }
  }
}